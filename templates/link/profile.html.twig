                                    <div class="name ms-4">
                                        <h5 class="mb-1"> {{dt.postal }} </h5> 
                                        
                                    </div>
                                </div>
                                
                                <div class="recent-message d-flex px-4 py-3">
                                    <div class="avatar avatar-lg">
                                        <img src="{{ asset('uploads/images/VILLE.jpg') }}">
                                    </div>
                                    <div class="name ms-4">
                                        <h5 class="mb-1"> {{ dt.ville}} </h5> 
                                        
                                    </div>
                                </div>
                                
                                <div class="recent-message d-flex px-4 py-3">
