{% extends 'base.html.twig' %}

{% block body %}
<div id="main">
    <header class="mb-3">
        <a href="#" class="burger-btn d-block d-xl-none">
            <i class="bi bi-justify fs-3"></i>
        </a>
    </header>
    <div class="page-heading">
        <h3>NOS MEMOIRES </h3>
    </div>
    <div class="page-content">
        <section class="row">
            <div class="col-12 col-lg-9">
                  {# {%  include "link/head.html.twig"  %} #}
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                             
                             <h4 id='gest-domaine'>Gestion des utilisateurs </h4>
                            </div>
                            <div class="card-body">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Email</th>
                                            <th>Sexe</th>
                                            <th>Nom</th>
                                            <th>Prenom</th>
                                            <th>Telephone</th>
                                            <th>actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for user in users %}
                                        <tr>
                                            <td>{{ user.id }}</td>
                                            <td>{{ user.email }}</td>
                                           <td>{{ user.sexe }}</td>
                                            <td>{{ user.nom }}</td>
                                            <td>{{ user.prenom }}</td>
                                            <td>{{ user.telephone }}</td>
                                            <td>
                                                 <a href="{{ path('app_user_show', {'id': user.id}) }}"><i class="fa fa-eye fa-2x"></i></a>
                                                 <div style="display: inline-block ; color:red;padding-bottom:4% ; vertical-align:top">{{ include('user/_delete_form.html.twig') }} </div>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="9">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        {#  form modal  #}
                      



                    </div>
                </div>
               
            </div>
        
          {%   include 'link/profile.html.twig'   %}    
        </section>
    </div>
    
</div>   
{% endblock %}


