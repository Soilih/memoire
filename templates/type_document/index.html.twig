{% extends 'base.html.twig' %}
{% block body %}
<div id="main">
    <header class="mb-3">
        <a href="#" class="burger-btn d-block d-xl-none">
            <i class="bi bi-justify fs-3"></i>
        </a>
    </header>
    <div class="page-heading">
        <h3>NOS MEMOIRES </h3>
    </div>
    <div class="page-content">
        <section class="row">
            <div class="col-12 col-lg-9">
                  {# {%  include "link/head.html.twig"  %} #}
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                               <a  data-bs-toggle="modal"
                                 data-bs-target="#exampleModalCenter" class="btn btn-success" id="add-domaine" href="{{ path('app_type_document_new') }}"> Ajouter type document </a>  
                                 <h4 id='gest-domaine'>Gestion des Type document </h4>
                            </div>
                             <div class="card-body">
                                <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Libelle</th>
                                                <th>actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        {% for type_document in type_documents %}
                                            <tr>
                                                <td>{{ type_document.id }}</td>
                                                <td>{{ type_document.libelle }}</td>
                                                <td>
                                                   <a href="{{ path('app_type_document_edit', {'id': type_document.id}) }}"><i class="fa fa-edit fa-2x"></i></a>
                                                 <div style="display: inline-block ; color:red;padding-bottom:4% ; vertical-align:top">{{ include('type_document/_delete_form.html.twig') }} </div>
                                                </td>
                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="3">no records found</td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    {# modal du formulaire  #}
                   
                    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
                                aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered modal-dialog-centered modal-dialog-scrollable"
                            role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalCenterTitle">Ajouter un domaine 
                                    </h5>
                                    <button type="button" class="close" data-bs-dismiss="modal"
                                        aria-label="Close">
                                        <i data-feather="x"></i>
                                    </button>
                                </div>
                                <div class="modal-body">
                                        {{ include('type_document/_form.html.twig') }} 
                                </div>
                            </div>
                        </div>
                    </div>
                   



                </div>
            </div>
        
          {%   include 'link/profile.html.twig'   %}    
        </section>
    </div>
    
</div>   
    
  
{% endblock %}

